<!DOCTYPE html>
<html lang="ko">
<head>
<meta charset="utf-8" />
<meta name="viewport" content="width=device-width,initial-scale=1" />
<title>구글 시트 → 깜박이는 문구</title>
<style>
  :root { --font: system-ui, AppleSDGothicNeo, "Malgun Gothic", Arial, sans-serif; }
  html, body { height: 100%; margin: 0; }
  body {
    display: grid;
    place-items: center;
    font-family: var(--font);
    background: #fff;
  }
  .card {
    min-width: 280px;
    max-width: 90vw;
    padding: 24px 28px;
    border: 1px solid #e8e8e8;
    border-radius: 16px;
    box-shadow: 0 6px 20px rgba(0,0,0,.06);
    text-align: center;
  }
  .label { font-size: 14px; color: #666; margin-bottom: 8px; }
  .text {
    font-size: 28px;
    line-height: 1.3;
    font-weight: 700;
    word-break: keep-all;
  }
  /* 깜박임 효과 */
  .blink { animation: blink 1s step-start infinite; }
  @keyframes blink { 50% { visibility: hidden; } }

  .meta { margin-top: 12px; font-size: 12px; color: #999; }
  .error { color: #b00020; font-weight: 600; }
</style>
</head>
<body>
  <div class="card">
    <div class="label">시트 값에 따른 표시</div>
    <div id="text" class="text blink">불러오는 중…</div>
    <div id="meta" class="meta"></div>
  </div>

<script>
/* ========================= 설정 =========================
 * 1) 시트를 “링크가 있는 모든 사용자(보기)”로 공유 
 * 2) 아래 변수 채우기
 * 3) A1 값이 1이면 B1, 아니면 B2를 깜박이며 표시
 * 4) 필요 시 REFRESH_MS로 자동 새로고침 주기 조정
 */
const SHEET_ID   = 16_aHITP-iPWE57OWnv85gw60qTN6Rhfo-41G1_rQpT0; // 예: 1AbCDeFg... (URL의 /d/와 /edit 사이)
const SHEET_NAME = 시트1;                   // 시트 탭 이름
const RANGE      = A1:B2;                   // A1, B1, B2를 포함하는 범위
const REFRESH_MS = 5000;                      // 5초마다 재조회 (원치 않으면 null)

/* =======================================================
 * 데이터 소스: gviz JSON
 * URL 예시:
 * https://docs.google.com/spreadsheets/d/<SHEET_ID>/gviz/tq?tqx=out:json&sheet=<SHEET_NAME>&range=<RANGE>
 * 공개 보기여야 브라우저에서 CORS로 접근 가능
 */
const GVIZ_URL = `https://docs.google.com/spreadsheets/d/${encodeURIComponent(SHEET_ID)}/gviz/tq?` +
                 `tqx=out:json&sheet=${encodeURIComponent(SHEET_NAME)}&range=${encodeURIComponent(RANGE)}`;

const $text = document.getElementById("text");
const $meta = document.getElementById("meta");

/** gviz 응답을 JSON으로 파싱 (응답 앞뒤에 주석 텍스트가 있어 슬라이스 필요) */
function parseGviz(text) {
  // gviz는 "/*O_o*/\ngoogle.visualization.Query.setResponse({...});" 형태
  const start = text.indexOf("{");
  const end   = text.lastIndexOf("}");
  if (start === -1 || end === -1) throw new Error("GViz 응답 파싱 실패");
  return JSON.parse(text.slice(start, end + 1));
}

/** A1, B1, B2를 읽어 로직에 따라 표시 */
function applyData(rows) {
  // rows는 2차원 형태. 첫 번째 행의 첫 번째 셀이 A1, 첫 행 두 번째 셀은 B1, 두 번째 행 두 번째 셀은 B2라고 가정
  // 범위가 A1:B2이므로 다음과 같이 접근:
  // rows[0].c[0] → A1, rows[0].c[1] → B1, rows[1].c[1] → B2
  const A1 = rows?.[0]?.c?.[0]?.v ?? null;
  const B1 = rows?.[0]?.c?.[1]?.v ?? "";
  const B2 = rows?.[1]?.c?.[1]?.v ?? "";

  let message;
  if (A1 === 1 || A1 === "1") {
    message = B1;
  } else {
    message = B2;
  }

  $text.textContent = message || "(표시할 문구가 없습니다)";
  $meta.textContent = `A1=${A1 ?? "N/A"} · B1/B2 선택됨 · ${new Date().toLocaleString()}`;
}

async function loadOnce() {
  try {
    $meta.textContent = "불러오는 중…";
    const res = await fetch(GVIZ_URL, { cache: "no-store" });
    if (!res.ok) throw new Error(`HTTP ${res.status}`);
    const raw = await res.text();
    const json = parseGviz(raw);
    const rows = json.table.rows;
    applyData(rows);
  } catch (err) {
    console.error(err);
    $text.textContent = "데이터를 불러오지 못했습니다";
    $text.classList.remove("blink");
    $text.classList.add("error");
    $meta.textContent = `${new Date().toLocaleString()}`;
  }
}

loadOnce();
if (typeof REFRESH_MS === "number" && REFRESH_MS > 0) {
  setInterval(loadOnce, REFRESH_MS);
}

/* ====== 커스터마이즈 팁 ======
 * - 표기 규칙 바꾸기:
 *   if (A1 === 1) → 원하는 조건식으로 교체 (예: A1>=5 등)
 * - 더 많은 문구 분기:
 *   switch(A1){ case 1: message=B1; break; case 2: message=B2; break; default: message=B3; }
 * - 깜박임 속도:
 *   CSS에서 animation: blink 1s ... 의 1s 값을 0.6s 등으로 변경
 */
</script>
</body>
</html>
